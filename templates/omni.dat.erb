## Define the Process Agent(s)
# Object Server Process Agent
[<%= node['objsrv']['os_pa_name'] %>]
{
  Primary: <%= node['objsrv']['OS'] %> <%= node['objsrv']['pa_port'] %>
}

# Probe Server Process Agent
[<%= node['objsrv']['ps_pa_name'] %>]
{
  Primary: <%= node['objsrv']['PS'] %> <%= node['objsrv']['pa_port'] %>
}

## Define the Object Server(s)
# Object Server
[<%= node['objsrv']['ncoms'] %>]
{
  Primary: <%= node['objsrv']['OS'] %> <%= node['objsrv']['os_port'] %>
}

# Primary Object Server
[<%= node['objsrv']['p-ncoms'] %>]
{
  Primary: <%= node['objsrv']['OS'] %> <%= node['objsrv']['os_port'] %>
}

# Backup Object Server
[<%= node['objsrv']['b-ncoms'] %>]
{
  Primary: <%= node['objsrv']['OS'] %> <%= node['objsrv']['os_port'] %>
}

# Define the Gateway(s)
# Bi Directional Gateway to connect to Backup Object Server
[<%= node['objsrv']['bi-name'] %>]
{
  Primary: <%= node['objsrv']['OS'] %> <%= node['objsrv']['bi_port'] %>
}

# Remedy Gateway - Ticketing
[<%= node['objsrv']['remedy'] %>]
{
  Primary: <%= node['objsrv']['OS'] %> <%= node['objsrv']['remedy_port'] %>
}

# Tivoli Data Warehouse Gateway - Reporting
[<%= node['objsrv']['tdw'] %>]
{
  Primary: <%= node['objsrv']['OS'] %> <%= node['objsrv']['tdw_port'] %>
}
